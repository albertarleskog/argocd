{
   "apiVersion": "apps/v1",
   "kind": "Deployment",
   "metadata": {
      "name": "blocky",
      "namespace": "blocky"
   },
   "spec": {
      "replicas": 3,
      "selector": {
         "matchLabels": {
            "app": "blocky"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "app": "blocky"
            },
            "name": "blocky"
         },
         "spec": {
            "containers": [
               {
                  "env": [
                     {
                        "name": "TZ",
                        "value": "Europe/Stockholm"
                     },
                     {
                        "name": "USER_GID",
                        "value": "1000"
                     }
                  ],
                  "image": "spx01/blocky:latest",
                  "livenessProbe": {
                     "failureThreshold": 5,
                     "httpGet": {
                        "path": "/api/blocking/status",
                        "port": "http"
                     },
                     "initialDelaySeconds": 30
                  },
                  "name": "blocky",
                  "ports": [
                     {
                        "containerPort": 53,
                        "name": "dns"
                     },
                     {
                        "containerPort": 80,
                        "name": "http"
                     },
                     {
                        "containerPort": 853,
                        "name": "dot"
                     }
                  ],
                  "resources": {
                     "limits": {
                        "cpu": "100m",
                        "memory": "128Mi"
                     },
                     "requests": {
                        "cpu": "100m",
                        "memory": "128Mi"
                     }
                  },
                  "volumeMounts": [
                     {
                        "mountPath": "/app/config.yml",
                        "name": "config",
                        "subPath": "config.yml"
                     }
                  ]
               }
            ],
            "hostUsers": false,
            "volumes": [
               {
                  "configMap": {
                     "name": "blocky"
                  },
                  "name": "config"
               }
            ]
         }
      }
   }
}
